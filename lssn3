#include <iostream>
using namespace std;

int main()
{
	setlocale(0, ""); // Русский, да
	int num; // вводимое число
	int pos; // проверка положительности числа
	int zn; // однозначное, двухзначное, трёхзначное

	cout << "Введите целое число: ";
	cin >> num;

	if (num > 0) { // идёт проверка положительности
		pos = 1;
	}

	else if (num < 0) {
		pos = -1;
	}
	
	else if (num == 0) { // ну тут всё понятно

		pos = 0;
		cout << "Вы ввели ноль, что делать будем, шеф?" << endl;
	}

	if (pos == 1) { // ветка для положительного числа

		if (num > 0 && num < 10) {
			zn = 1;
		}

		if (num > 9 && num < 100) {
			zn = 2;
		}

		if (num > 99 && num < 100) {
			zn = 3;
		}


		if (zn == 1) {
			cout << "Вы ввели однозначное положительное число" << endl;
		}

		if (zn == 2) {
			cout << "Вы ввели двухсзначное положительное число" << endl;
		}

		if (zn == 3) {
			cout << "Вы ввели трёхначное положительное число" << endl;
		}
	}

	if (pos == -1) {

		if (num > -10 && num < 0) {
			zn = 1;
		}

		if (num < -9 && num > -100) {
			zn = 2;
		}
		if (num < -99 && num > -100) {
			zn = 3;
		}

		if (zn == 1) {
			cout << "Вы ввели одназначное отрицательное число" << endl;
		}

		if (zn == 2) {
			cout << "Вы ввели двухзначное отрицательное число" << endl;
		}

		if (zn == 3) {
			cout << "Вы ввели трёхначное отрицательное число" << endl;
		}
	}

	
	system("pause");
	return 0;
}
