#include <iostream> 
using namespace std;

int main()
{
	setlocale(0, ""); //  Локаль используется для того, чтобы консоль видела кириллицу

	int a, b; // сложение
	int c, d; // вычитание
	int e, f; // произведение
	float g, h; // разность

	cout << "Сложение" << endl;
	cout << "Введите первое число: ";
	cin >> a; // вводим число и оно присваивается переменной а
	cout << "Введите второе число: ";
	cin >> b; // вводим число, присваивается переменной b
	int summa = a + b; // вводим переменную summa типа int и присваиваем ей значение a+b 
	cout << "Сумма чисел = " << summa << endl << endl << endl;

	cout << "Вычитание" << endl;
	cout << "Введите первое число: ";
	cin >> c;
	cout << "Введите второе число: ";
	cin >> d;
	int razn = c - d;
	cout << "Произведение равно: " << razn << endl << endl << endl;

	cout << "Умножение" << endl;
	cout << "Введите первое число: ";
	cin >> e;
	cout << "Введите второе число: ";
	cin >> f;
	int mnj = e * f;
	cout << "Произведение равно: " << mnj << endl << endl << endl;
	cout << "Деление" << endl;

	cout << "Введите первое число: ";
	cin >> g;
	cout << "Введите второе число: ";
	cin >> h;
	float del = g / h;
	cout << "Результат равен: " << del << endl << endl << endl << endl;
	
	system("pause"); // не забываем про окно
	return 0;
}
